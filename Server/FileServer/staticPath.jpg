import java.io.IOException;
import java.io.PrintWriter;
import java.util.ArrayList;
import java.util.Scanner;

public class Blotter {
    public static void main(String[] args) throws IOException{
        int length = 50;

        if(args.length > 0)
            length = Integer.parseInt(args[0]);

        System.out.println("Sisesta järjest 0 või rohkem üherealist bleeti või blosti." +
                        " Lõpetamiseks vajuta lihtsalt ENTER (st. sisesta tühi sõne)\n"+
                        "Bleeti maksimaalseks pikkuseks on " + length + " sümbolit.");

        PrintWriter pw = new PrintWriter("output.txt", "UTF-8");
        Scanner scanner = new Scanner(System.in);
        ArrayList<String> strList = new ArrayList<String>();

        while(true){
            if(!scanner.hasNextLine())
                continue;

            String str = scanner.nextLine();

            if(str.equals(""))
                break;

            strList.add(str);
        }

        System.out.println("Sisesta päeva hashtag (ilma trellideta): ");
        String hashtag = new String(scanner.next());

        for(String i : strList){
            if(i.contains("#" + hashtag) || i.length() <= length)
                pw.println(i);
        }

        pw.close();
    }
}

